{
	"manifest_version": 2,
	"name": "userChromeES",
	"description": "__MSG_description__",
	"version": "0.6.1",
	"applications": {
		"gecko": {
			"id": "user-chrome-es@id.pokemori.jp",
			"strict_max_version": "52.*"
		}
	},

	"permissions": [
		"<all_urls>",

		"alarms",
		"bookmarks",
		"cookies",
		"contextMenus",
		"downloads",
		"downloads.open",
		"history",
		"idle",
		"management",
		"nativeMessaging",
		"notifications",
		"sessions",
		"storage",
		"tabs",
		"topSites",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",

		"clipboardWrite"
	],
	"content_security_policy": "script-src 'self' blob: 'unsafe-eval'; object-src 'self' blob:",

	"background": {
		"page": "background/background.xhtml"
	},
	"browser_action": {
		"browser_style": true,
		"default_popup": "popup/popup.xhtml"
	},
	"options_ui": {
		"browser_style": true,
		"page": "options/options.xhtml"
	},
	"default_locale": "en",

	"author": "100の人",
	"homepage_url": "https://addons.mozilla.org/firefox/addon/user-chrome-es/"
}
